struct Token {
	kind TokenKind
	span Span
}

union TokenKind {
	// Keyword
	struct_
	union_
	actor_
	alias_
	fn_
	pub_
	let_
	var_
	mut_
	for_
	while_
	if_
	else_
	switch_
	as_
	test_
	assert_
	break_
	continue_
	return_
	try_

	// Reserved
	async_
	await_
	catch_
	raise_

	// Identifier
	type
	ident

	// Literals
	str
	int
	float
	char

	// Arithmetic
	add
	sub
	mul
	div
	rem
	assign
	add_assign
	sub_assign
	mul_assign
	div_assign
	rem_assign

	// Collection
	concat
	concat_assign

	// Logical
	and_
	or_
	not

	// Comparison
	eq
	ne
	gt
	ge
	lt
	le
		
	// Delimiter
	comma
	semicolon
	colon
	dot
	newline

	path // ::

	pipe

	lbrace
	rbrace
	lbracket
	rbracket
	lparen
	rparen

	comment
	
	eof
	error
}

