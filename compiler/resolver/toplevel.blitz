fn lower(def ast::Struct, mut types List(hir::TypeKind)) hir::TypeDef {
    let name = ast::Ident(name: def.sig.name, span: def.sig.span)
    var fields = []
    for def.fields |field| {
        fields ++= hir::FieldDef(name: field.name, type: hir::TypeRef(id: 0))
    }

    // TODO: type parameters
    hir::TypeDef(name:, generic: [], kind: hir::StructDef(fields:), vis: module)
}

fn lower(def ast::Union, mut types List(hir::TypeKind)) hir::TypeDef {
    let name = ast::Ident(name: def.sig.name, span: def.sig.span)
    let kind = hir::UnionDef(cases: [])

    // TODO: type parameters
    hir::TypeDef(name:, generic: [], kind:, vis: module)
}

