struct Token {
	kind TokenKind
	span Span
}

union TokenKind {
	// Keyword
	struct
	union
	actor
	alias
	fn
	pub
	let
	mut
	for
	while
	if
	else
	switch
	test

	// Identifier
	type
	var

	// Arithmetic
	add
	sub
	mul
	div
	rem
	assign

	// Logical
	and
	or
	not

	// Comparison
	eq
	ne
	gt
	ge
	lt
	le
		
	// Delimiter
	comma
	semicolon
	dot
	newline

	lbrace
	rbrace
	lbracket
	rbracket
	lparen
	rparen

	eof
	error
}

struct Span {
	start Int
	end   Int // inclusive
}
